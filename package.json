{
  "name": "carrack",
  "version": "0.1.0",
  "description": "a Promise-based EventEmitter",
  "main": "lib",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "abby test lint-fix",
    "test": "mocha --compilers js:babel-register",
    "lint": "eslint *.js src test",
    "lint-fix": "eslint *.js src test --fix",
    "cover": "abby cover:test, cover:report --no-watch",
    "cover:test": "nyc --reporter=lcov --reporter=text npm test",
    "cover:report": "node -e \"if(process.env.TRAVIS){}else{process.exit(1)}\" && codeclimate-test-reporter < coverage/lcov.info || echo skip coverage report",
    "compile": "babel -V && babel src --out-dir lib",
    "setup": "npm install zuul browserify babelify envify exorcist",
    "localhost": "zuul test --ui mocha-bdd --local 59798 --open",
    "test-cloud": "zuul test",
    "build": "uglifyjs carrack.js --in-source-map carrack.js.map --mangle --compress --output carrack.min.js --source-map carrack.min.js.map",
    "prebuild": "browserify ./src --transform babelify --transform envify --standalone carrack --debug | exorcist carrack.js.map -b . > carrack.js",
    "postbuild": "rm carrack.js carrack.js.map && wc -c carrack.min.js"
  },
  "abigail": {
    "plugins": {
      "watch": "*.js,src/**/*.js,test/**/*.js"
    }
  },
  "dependencies": {
    "bluebird": "^3.0.1"
  },
  "devDependencies": {
    "abigail": "^1.0.0",
    "assert-rejected": "^1.1.0",
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-espower": "^2.1.2",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.7.2",
    "codeclimate-test-reporter": "^0.3.1",
    "eslint": "^2.5.1",
    "eslint-config-airbnb": "^6.2.0",
    "mocha": "^2.4.5",
    "nyc": "^6.1.1",
    "power-assert": "^1.3.1"
  },
  "keywords": [
    "eventemitter",
    "dispatcher",
    "promise"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/59naga/carrack.git"
  },
  "bugs": {
    "url": "https://github.com/59naga/carrack/issues"
  },
  "homepage": "https://github.com/59naga/carrack#readme",
  "author": "59naga <i59naga@icloud.com> (http://berabou.me)",
  "license": "MIT"
}
